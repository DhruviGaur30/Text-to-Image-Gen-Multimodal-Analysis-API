# Environment type
ENV=development

# Force CPU execution (safe for Intel Iris Xe)
DEVICE=cpu

# Disable HuggingFace XET downloads (prevents network errors)
HF_HUB_DISABLE_XET=1

# HuggingFace cache directory (optional but useful)
HF_HOME=C:/Users/dhruv/.cache/huggingface

# Reduce memory pressure on CPU
TORCH_ENABLE_MPS_FALLBACK=1

# API settings
API_HOST=127.0.0.1
API_PORT=8000

# Logging
LOG_LEVEL=INFO
